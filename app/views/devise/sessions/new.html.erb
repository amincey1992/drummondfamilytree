<h2 class="part_out">Log in</h2>

<div class="back2">
<div class="container rap">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.input_field :email, required: false, autofocus: true, placeholder:"Email", class:"form-control"  %>
  </div>
  <div class="form-group">
    <%= f.input_field :password, required: false, placeholder:"Password", class:"form-control"  %>
    </div>
  <div class="form-group">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn btn-primary minus"%>
  </div>
  <div class="form-actions">
  <div class="moveee">New to Drummond Family Tree?</div>
  <%= link_to 'Sign Up', new_registration_path(resource_name), class:"btn btn-primary minustwo sign_it" %>
  </div>
<% end %>
</div>

<%= link_to "Forgot your password?", new_password_path(resource_name), class:"btn btn-primary add forgot pass"  %>
</div>