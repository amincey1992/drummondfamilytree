<h2 class="edit_title">Edit <%= current_user.user_name %>'s Profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>


<div class="container">
  <div class="form-group width">
    <%= f.input_field :email, required: true, autofocus: true, class:"form-control" %>
  </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

     <div class="form-group">
    <%= f.text_field :user_name, required: true, autofocus:true, placeholder:"First Name", class:"form-control"%> 
    </div>

    <div class="form-group width">
    <%= f.input_field :password, autocomplete: "off", placeholder:"New Password", required: false, class:"form-control" %>
    </div>
    <div class="form-group width">
    <%= f.input_field :password_confirmation, required: false, placeholder:"Confirm New Password", class:"form-control" %>
    </div>
    <div class="form-group width">
    <%= f.input_field :current_password, placeholder:"Old Password", required: true, class:"form-control extra_features" %>
    <div class="extra_features"> *Must Enter Old Password When Making Any Changes*</div>
  </div>

<div class="profile_pic">
  <div class="form-group">
        <%= f.label "Profile Picture", class: 'col-sm-2 control-label avatar_label'  %>
        <div class="col-sm-6">
            <%= f.file_field :avatar %>
        </div>
    </div>
</div>

<!--  <div class="fb-login-button" data-max-rows="1" data-size="large" data-show-faces="false" data-auto-logout-link="true"></div>
    <div class="extra_features"> Sign into facebook for extra features </div> -->


  <div class="form-actions">
    <%= f.button :submit, "Update Profile" , class:"btn btn-primary add"%>
  </div>
</div>
<% end %>


<h3>Cancel my account</h3>

<p class="unhappy"><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-primary add"%></p>

<%= link_to "Back", :back, class:"btn btn-primary add" %>


