<%= simple_form_for(@forum) do |f| %>
  <%= f.error_notification %>

<div class="container">
  <div class="form-group">
    <%= f.input_field :title, placeholder:"Title", class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.input_field :entry, placeholder:"What's on your mind?", class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.select :category, options_for_select([['Social'], ['Shout-out'], ['Event'], ['Part-Out'], ['HELP!']], :include_blank => 'What is your post related to?'), class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Photo" %><br>
    <%= f.file_field :avatar %>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "Create Post", class:"btn btn-primary"  %>
  </div>
<% end %>
</div>
