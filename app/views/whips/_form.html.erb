<%= simple_form_for(@whip) do |f| %>
  <%= f.error_notification %>



<div class="top_whip container">
<div class="back">
<div class="whip">
  <div class="form-inputs">
<h3 class="title"> The Whip </h3>
  <p class="sub"> Enter for a Chance to be AGCC's Car of the Week! </p>
  <div class="form-group">
    <%= f.input_field :name, placeholder:"Name" %>
  </div>
  <div class="form-group">
    <%= f.select :model, %w(2.0t 3.8), {:include_blank => 'Choose a Model'} %>
  </div>
  <div class="form-group">
    <%= f.select :year, %w(2008 2009 2010 2011 2012 2013 2014 2015 2016 2017), {:include_blank => 'Choose a Year'}  %>
  </div>
  <div class="form-group">
    <%= f.text_field :mods, placeholder:"List All Modifications" %>
  </div>
  <div class="form-group">
    <%= f.label "Photo" %><br>
    <%= f.file_field :avatar %>
  </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
</div>
</div>
